{
    "rewrites": [{
        "source": "/api/(.*)",
        "destination": "https://mauricios-cafe-bakery.onrender.com/api/$1"
    }],
    "routes": [
        { "handle": "filesystem" },
        { "src": "/(.*)", "dest": "/index.html" }
    ],
    "headers": [{
            "source": "/index.html",
            "headers": [{
                    "key": "Cache-Control",
                    "value": "no-cache, no-store, must-revalidate"
                },
                {
                    "key": "Pragma",
                    "value": "no-cache"
                },
                {
                    "key": "Expires",
                    "value": "0"
                }
            ]
        },
        {
            "source": "/assets/(.*)",
            "headers": [{
                "key": "Cache-Control",
                "value": "public, max-age=31536000, immutable"
            }]
        }
    ]
}